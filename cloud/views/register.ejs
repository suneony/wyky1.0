<div class="register_body">
	<form class="form-horizontal" role="form" method="post" id="register-form">
	  <div class="form-group">
	    <label for="inputUsername" class="col-sm-2 control-label">Username</label>
	    <div class="col-sm-6">
	      <input type="text" class="form-control " id="inputUsername" name="inputUsername" placeholder="Username">
	    </div>
	  </div>
	  <div class="form-group">
	    <label for="inputPassword" class="col-sm-2 control-label">Password</label>
	    <div class="col-sm-10">
	      <input type="password" class="form-control" id="inputPassword" name="inputPassword" placeholder="Password">
	    </div>
	  </div>
	  <div class="form-group">
	    <label for="inputConfirm" class="col-sm-2 control-label">Confirm</label>
	    <div class="col-sm-10">
	      <input type="password" class="form-control" id="inputConfirm" name="inputConfirm" placeholder="Confirm">
	    </div>
	  </div>
	  <div class="form-group">
	    <div class="col-sm-offset-2 col-sm-10">
	      <button type="submit" class="btn btn-default">Sign in</button>
	    </div>
	  </div>
	</form>
</div>